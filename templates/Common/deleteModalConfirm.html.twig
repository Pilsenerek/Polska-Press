<div data-js-id="deleteModalConfirm" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Please confirm</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" data-js-id="modalContent">
        <p>Are you sure?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <a href="#" class="btn btn-success" data-js-id="deleteModalConfirmUrl">Proceed</a>
      </div>
    </div>
  </div>
</div>

{% block javascripts %}
    <script>
        $(document).ready(function() {
                deleteConfirmation();
        });

        //Delete confirmation
        function deleteConfirmation(){
            $("[data-target='#deleteModalConfirm']").click(function(ev) {
                var href = $(this).attr('href');
                var content = $(this).attr('data-content');
                $('[data-js-id="deleteModalConfirmUrl"]').attr('href', href);
                $('[data-js-id="modalContent"]').text(content);
                $('[data-js-id="deleteModalConfirm"]').modal('show');

                return false;
            });
        }
    </script>
{% endblock %}
